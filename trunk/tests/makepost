all: $(ALL)

clean:
	$(rm) $(ALL) *$(obj) .depend

# This allows special processing for files in subdirectories that do not
# have their own build setup:
.depend: $(ALL_SRC)
	$(CPP) $(CPPFLAGS) $(CXXFLAGS) $^ > .depend
#	$(CPP) $(CPPFLAGS) $(CXXFLAGS) $^ | sed -e 's@\(.*\)\.o[ :]*@$*.o : @g' -e 's@\($*\)\.o[ :]*@\1.o $@ : @g' > $@
#	$(CPP) $(CPPFLAGS) $(CXXFLAGS) $^

include .depend

